<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QLDACN</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLDACN.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#16a34a",
                        "primary-dark": "#0f8f3d",
                        "accent-coral": "#ff7f50",
                        "accent-yellow": "#e6ff00",
                        "background-light": "#f6f8f7",
                        "background-dark": "#102219",
                        "surface-light": "#ffffff",
                        "surface-dark": "#162e22",
                        "text-main-light": "#0d1b14",
                        "text-main-dark": "#f0fdf4",
                        "text-sec-light": "#4b5563",
                        "text-sec-dark": "#9ca3af",
                    },
                    fontFamily: {
                        display: ["Inter", "sans-serif"],
                        sans: ["Inter", "sans-serif"],
                    },
                    borderRadius: { DEFAULT: "0.25rem", lg: "0.5rem", xl: "0.75rem", "2xl": "1rem", full: "9999px" },
                },
            },
        };
    </script>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
</head>
<body>
    <header>
        <div class="w-full bg-surface-light/80 dark:bg-surface-dark/80 backdrop-blur-md sticky top-0 z-50 border-b border-gray-200 dark:border-white/10">
            <div class="px-4 md:px-8 lg:px-40 flex justify-center">
                <div class="w-full max-w-[1280px]">
                    <div class="flex items-center justify-between whitespace-nowrap py-4">
                        <div class="flex items-center gap-3 text-text-main-light dark:text-text-main-dark">
                            <div class="size-8 text-primary flex items-center justify-center">
                                <span class="material-symbols-outlined text-3xl">recycling</span>
                            </div>
                            <a asp-controller="Home" asp-action="Index" class="text-xl font-bold leading-tight tracking-tight">Trash to Reward</a>
                        </div>
                        <div class="hidden lg:flex items-center gap-8">
                            <a class="nav-link-underline text-text-sec-light dark:text-text-sec-dark hover:text-primary dark:hover:text-primary text-sm font-medium transition-colors" asp-controller="Home" asp-action="Index">Trang chủ</a>
                            <a class="nav-link-underline text-text-sec-light dark:text-text-sec-dark hover:text-primary dark:hover:text-primary text-sm font-medium transition-colors" asp-controller="Schedule" asp-action="Index">Đặt lịch</a>
                            <a class="nav-link-underline text-text-sec-light dark:text-text-sec-dark hover:text-primary dark:hover:text-primary text-sm font-medium transition-colors" asp-controller="Home" asp-action="Rewards">Phần thưởng</a>
                            <a class="nav-link-underline text-text-sec-light dark:text-text-sec-dark hover:text-primary dark:hover:text-primary text-sm font-medium transition-colors" asp-controller="Home" asp-action="ExchangeRates">Tỉ lệ đổi</a>
                            <div class="relative group">
                                <a class="nav-link-underline text-text-sec-light dark:text-text-sec-dark hover:text-primary dark:hover:text-primary text-sm font-medium transition-colors flex items-center gap-1" href="javascript:void(0)">
                                    Các hoạt động
                                    <span class="material-symbols-outlined text-base">expand_more</span>
                                </a>
                                <div class="absolute left-0 top-full pt-3 w-64 hidden group-hover:block">
                                    <div class="hover-buffer absolute -top-3 left-0 h-4 w-64"></div>
                                    <div class="relative bg-white dark:bg-surface-dark border border-gray-200 dark:border-white/10 rounded-xl shadow-2xl overflow-hidden">
                                        <div class="border-t border-gray-200 dark:border-white/10"></div>
                                        <a class="flex items-center gap-2 px-4 py-3 text-sm text-text-main-light dark:text-text-main-dark hover:bg-primary/10" asp-controller="Activity" asp-action="Receipts">
                                            <span class="material-symbols-outlined text-primary">receipt_long</span>
                                            Phiếu ghi nhận
                                        </a>
                                        <a class="flex items-center gap-2 px-4 py-3 text-sm text-text-main-light dark:text-text-main-dark hover:bg-primary/10" asp-controller="Activity" asp-action="Redemptions">
                                            <span class="material-symbols-outlined text-primary">redeem</span>
                                            Phiếu đổi quà
                                        </a>
                                        <a class="flex items-center gap-2 px-4 py-3 text-sm text-text-main-light dark:text-text-main-dark hover:bg-primary/10" asp-controller="Activity" asp-action="Points">
                                            <span class="material-symbols-outlined text-primary">token</span>
                                            Lịch sử tích điểm
                                        </a>
                                    </div>
                                </div>
                            </div>
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link-underline text-text-sec-light dark:text-text-sec-dark hover:text-primary dark:hover:text-primary text-sm font-medium transition-colors" asp-controller="Admin" asp-action="Index">Quản trị</a>
                            }
                        </div>
                        <div class="flex gap-3 items-center">
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                var username = User.Identity!.Name ?? "User";
                                var initial = username.Substring(0,1).ToUpperInvariant();
                                <div class="relative group">
                                    <button class="flex items-center gap-3 h-10 px-3 rounded-lg bg-surface-light dark:bg-white/5 border border-gray-200 dark:border-white/10 text-text-main-light dark:text-text-main-dark text-sm font-bold hover:bg-gray-50 dark:hover:bg-white/10 transition-colors">
                                        <div class="size-7 rounded-full bg-primary text-white flex items-center justify-center">@initial</div>
                                        <span>@username</span>
                                        <span class="material-symbols-outlined text-base">expand_more</span>
                                    </button>
                                    <div class="absolute right-0 top-full pt-3 w-64 hidden group-hover:block">
                                        <div class="hover-buffer absolute -top-3 right-0 h-4 w-64"></div>
                                        <div class="relative bg-white dark:bg-surface-dark border border-gray-200 dark:border-white/10 rounded-xl shadow-2xl overflow-hidden">
                                            <div class="dropdown-arrow"></div>
                                            <div class="border-t border-gray-200 dark:border-white/10"></div>
                                            <a class="flex items-center gap-2 px-4 py-3 text-sm text-text-main-light dark:text-text-main-dark hover:bg-primary/10" asp-controller="User" asp-action="Index">
                                                <span class="material-symbols-outlined text-primary">account_circle</span>
                                                Trang cá nhân
                                            </a>
                                            <form asp-controller="Account" asp-action="Logout" method="post" class="border-t border-gray-200 dark:border-white/10">
                                                <button type="submit" class="flex items-center gap-2 w-full text-left px-4 py-3 text-sm text-red-600 hover:bg-red-50 dark:hover:bg-white/10">
                                                    <span class="material-symbols-outlined">logout</span>
                                                    Đăng xuất
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="hidden sm:flex h-10 px-5 cursor-pointer items-center justify-center rounded-lg bg-surface-light dark:bg-white/5 border border-gray-200 dark:border-white/10 text-text-main-light dark:text-text-main-dark text-sm font-bold hover:bg-gray-50 dark:hover:bg-white/10 transition-colors">Đăng nhập</a>
                                <a asp-controller="Account" asp-action="Register" class="flex h-10 px-5 cursor-pointer items-center justify-center rounded-lg bg-primary hover:bg-primary-dark text-white dark:text-[#0d1b14] text-sm font-bold shadow-lg shadow-primary/20 transition-all">Đăng ký</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <section class="px-4 md:px-8 lg:px-40 py-20 bg-background-light dark:bg-background-dark border-t border-gray-200 dark:border-white/5">
        <div class="w-full max-w-[1280px] mx-auto">
            <div class="bg-primary rounded-3xl p-8 md:p-16 flex flex-col md:flex-row items-center justify-between gap-10 relative overflow-hidden cta-card">
                <div class="absolute -left-20 -top-20 w-60 h-60 bg-white/10 rounded-full blur-3xl"></div>
                <div class="absolute -right-20 -bottom-20 w-60 h-60 bg-black/10 rounded-full blur-3xl"></div>
                <div class="relative z-10 max-w-xl">
                    <h2 class="text-[#0d1b14] text-3xl md:text-4xl font-black mb-4 tracking-tight">Sẵn sàng biến rác thành giá trị?</h2>
                    <p class="text-[#0d1b14]/80 text-lg font-medium">Tải ứng dụng và bắt đầu hành trình vì hành tinh xanh với nhiều phần thưởng hấp dẫn.</p>
                </div>
                <div class="relative z-10 flex flex-col sm:flex-row gap-4">
                    <button class="bg-[#0d1b14] text-white px-8 py-4 rounded-xl font-bold flex items-center justify-center gap-2 hover:bg-black/80 transition-colors shadow-xl">
                        <span class="material-symbols-outlined">android</span>
                        Tải trên Play Store
                    </button>
                    <button class="bg-white text-[#0d1b14] px-8 py-4 rounded-xl font-bold flex items-center justify-center gap-2 hover:bg-gray-100 transition-colors shadow-xl">
                        <span class="material-symbols-outlined">star</span>
                        Tải trên App Store
                    </button>
                </div>
            </div>
            <footer class="mt-20 flex flex-col items-center text-center gap-6 border-t border-gray-200 dark:border-white/10 pt-10 site-footer">
                <div class="flex items-center gap-2 text-text-main-light dark:text-text-main-dark">
                    <div class="size-6 text-primary flex items-center justify-center">
                        <span class="material-symbols-outlined">recycling</span>
                    </div>
                    <span class="font-bold">Trash to Reward</span>
                </div>
                <div class="flex gap-8 text-sm text-text-sec-light dark:text-text-sec-dark site-footer-links">
                    <a class="hover:text-primary transition-colors" asp-controller="Home" asp-action="Privacy">Bảo mật</a>
                    <a class="hover:text-primary transition-colors" href="#">Điều khoản</a>
                    <a class="hover:text-primary transition-colors" href="#">Liên hệ</a>
                </div>
                <div class="text-sm text-text-sec-light dark:text-text-sec-dark">
                    © 2025 Trash to Reward
                </div>
            </footer>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
