@model QLDACN.Models.PickupSchedule
@{
    ViewData["Title"] = "Tạo lịch thu gom";
}
<div class="px-4 md:px-8 lg:px-40 flex justify-center py-12">
    <div class="w-full max-w-[800px]">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-bold uppercase tracking-wider mb-3">Đặt lịch</div>
        <h1 class="text-2xl md:text-3xl font-bold text-text-main-light dark:text-text-main-dark mb-6">Tạo lịch thu gom</h1>
        <form asp-action="Create" method="post" class="flex flex-col gap-6 bg-white dark:bg-surface-dark border border-gray-200 dark:border-white/10 rounded-3xl p-8 shadow-xl">
            <div>
                <label class="text-sm font-bold text-text-main-light dark:text-text-main-dark">Địa chỉ thu gom</label>
                <input asp-for="PickupAddress" class="mt-2 w-full h-12 rounded-xl border border-gray-300 focus:border-primary focus:ring-0 px-4 input-modern" />
                <span asp-validation-for="PickupAddress" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label class="text-sm font-bold text-text-main-light dark:text-text-main-dark">Thời gian</label>
                <div class="relative mt-2">
                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-primary">event</span>
                    <input asp-for="ScheduledDate" asp-format="{0:yyyy-MM-ddTHH:mm}" type="datetime-local" step="60" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" class="w-full h-12 rounded-xl border border-gray-300 focus:border-primary focus:ring-0 pl-11 pr-3 input-modern" />
                </div>
                <span asp-validation-for="ScheduledDate" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label class="text-sm font-bold text-text-main-light dark:text-text-main-dark">Ghi chú</label>
                <textarea asp-for="Note" rows="3" class="mt-2 w-full rounded-xl border border-gray-300 focus:border-primary focus:ring-0 px-4"></textarea>
            </div>
            <div class="flex items-center gap-3">
                <button type="submit" class="h-12 px-6 rounded-xl bg-primary hover:bg-primary-dark text-white font-bold shadow-lg shadow-primary/30">Đặt lịch</button>
                <a asp-action="Index" class="h-12 px-6 rounded-xl bg-surface-light border border-gray-200 text-text-main-light font-bold">Hủy</a>
            </div>
        </form>
    </div>
</div>
