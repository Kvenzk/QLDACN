@model IEnumerable<QLDACN.Models.User>
@{
    ViewData["Title"] = "Người dùng";
    Layout = null;
}
<!DOCTYPE html>
<html class="light" lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản trị - Người dùng</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#11d473",
                        "primary-dark": "#0e9f56",
                        "deep-teal": "#0d1b14",
                        "background-light": "#f6f8f7",
                        "background-dark": "#102219",
                    },
                    fontFamily: { display: ["Inter", "sans-serif"] },
                    borderRadius: { "2xl": "1rem" }
                }
            }
        }
    </script>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-slate-100 font-display antialiased overflow-hidden">
    <div class="flex h-screen w-full">
        <aside class="hidden md:flex flex-col w-64 h-full bg-deep-teal text-white flex-shrink-0">
            <div class="p-6 flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-primary flex items-center justify-center">
                    <span class="material-symbols-outlined text-deep-teal text-xl">recycling</span>
                </div>
                <h1 class="text-xl font-bold tracking-tight">Trash to Reward</h1>
            </div>
            <nav class="flex-1 px-4 py-4 flex flex-col gap-2">
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Admin" asp-action="Index">
                    <span class="material-symbols-outlined">dashboard</span>
                    <span class="text-sm font-medium">Bảng điều khiển</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Admin" asp-action="Staff">
                    <span class="material-symbols-outlined">badge</span>
                    <span class="text-sm font-medium">Nhân viên</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl bg-primary/10 text-primary border border-primary/20" asp-controller="Admin" asp-action="Users">
                    <span class="material-symbols-outlined">group</span>
                    <span class="text-sm font-medium">Người dùng</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Admin" asp-action="Schedules">
                    <span class="material-symbols-outlined">event</span>
                    <span class="text-sm font-medium">Lịch thu gom</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Admin" asp-action="Receipts">
                    <span class="material-symbols-outlined">receipt_long</span>
                    <span class="text-sm font-medium">Ghi nhận thu gom</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Admin" asp-action="Deliveries">
                    <span class="material-symbols-outlined">local_shipping</span>
                    <span class="text-sm font-medium">Lịch giao quà</span>
                </a>
            </nav>
            <form asp-controller="Account" asp-action="Logout" method="post" class="px-4 py-4 mt-auto">
                <button type="submit" class="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/5 transition-colors border border-white/10">
                    <span class="material-symbols-outlined">logout</span>
                    <span class="text-sm font-medium">Đăng xuất</span>
                </button>
            </form>
        </aside>
        <main class="flex-1 flex flex-col h-full overflow-hidden bg-[#f8fcfa] dark:bg-background-dark relative">
            <header class="h-16 flex items-center justify-between px-8 bg-white/50 dark:bg-deep-teal/50 backdrop-blur-sm border-b border-gray-100 dark:border-white/5 z-20 sticky top-0">
                <div class="flex flex-col">
                    <h2 class="text-xl font-bold text-deep-teal dark:text-white">Người dùng</h2>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Danh sách tất cả người dùng đã đăng ký</p>
                </div>
            </header>
            <div class="flex-1 overflow-y-auto p-8">
                <div class="w-full max-w-none mx-auto flex flex-col gap-6">
                    <div class="bg-white dark:bg-[#1a2c24] rounded-2xl p-6 border border-gray-100 dark:border-white/5 shadow-sm">
                        <div class="flex items-center justify-between mb-4">
                            <h3 class="text-lg font-bold text-deep-teal dark:text-white">Danh sách người dùng</h3>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="w-full text-left border-collapse">
                                <thead>
                                    <tr class="text-xs text-gray-400 border-b border-gray-100 dark:border-white/5">
                                        <th class="py-3 font-medium uppercase tracking-wider">Người dùng</th>
                                        <th class="py-3 font-medium uppercase tracking-wider">Email</th>
                                        <th class="py-3 font-medium uppercase tracking-wider">Điện thoại</th>
                                        <th class="py-3 font-medium uppercase tracking-wider">Địa chỉ</th>
                                        <th class="py-3 font-medium uppercase tracking-wider">Vai trò</th>
                                        <th class="py-3 font-medium uppercase tracking-wider">Trạng thái</th>
                                        <th class="py-3 font-medium uppercase tracking-wider">Ngày tạo</th>
                                    </tr>
                                </thead>
                                <tbody class="text-sm text-gray-600 dark:text-gray-300">
                                    @foreach (var u in Model)
                                    {
                                        var name = string.IsNullOrWhiteSpace(u.FullName) ? u.Username : u.FullName;
                                        var initial = string.IsNullOrWhiteSpace(name) ? "?" : name.Substring(0,1).ToUpperInvariant();
                                        var role = u.Role?.RoleName ?? "—";
                                        var status = u.Status;
                                        var stClass = status == "Active"
                                            ? "px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-700 border border-green-200"
                                            : "px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-700 border border-gray-200";
                                        <tr class="border-b border-gray-50 dark:border-white/5 hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                                            <td class="py-4">
                                                <div class="flex items-center gap-3">
                                                    <div class="w-8 h-8 rounded-full bg-primary text-white flex items-center justify-center">@initial</div>
                                                    <div class="flex flex-col">
                                                        <span class="font-medium text-deep-teal dark:text-white">@name</span>
                                                        <span class="text-xs text-gray-400">@u.Username</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-4">@u.Email</td>
                                            <td class="py-4">@((string.IsNullOrWhiteSpace(u.Phone) ? "—" : u.Phone))</td>
                                            <td class="py-4">@((string.IsNullOrWhiteSpace(u.Address) ? "—" : u.Address))</td>
                                            <td class="py-4">@role</td>
                                            <td class="py-4"><span class="@stClass">@status</span></td>
                                            <td class="py-4">@u.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
