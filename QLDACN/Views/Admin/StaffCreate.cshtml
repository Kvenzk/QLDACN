@model QLDACN.Models.RegisterViewModel
@{
    ViewData["Title"] = "Thêm nhân viên";
    Layout = null;
}
<!DOCTYPE html>
<html class="light" lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản trị - Thêm nhân viên</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#11d473",
                        "primary-dark": "#0e9f56",
                        "deep-teal": "#0d1b14",
                        "background-light": "#f6f8f7",
                        "background-dark": "#102219",
                    },
                    fontFamily: { display: ["Inter", "sans-serif"] },
                    borderRadius: { "2xl": "1rem" }
                }
            }
        }
    </script>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-slate-100 font-display antialiased overflow-hidden">
    <div class="flex h-screen w-full">
        <aside class="hidden md:flex flex-col w-64 h-full bg-deep-teal text-white flex-shrink-0">
            <div class="p-6 flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-primary flex items-center justify-center">
                    <span class="material-symbols-outlined text-deep-teal text-xl">recycling</span>
                </div>
                <h1 class="text-xl font-bold tracking-tight">Trash to Reward</h1>
            </div>
            <nav class="flex-1 px-4 py-4 flex flex-col gap-2">
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Admin" asp-action="Index">
                    <span class="material-symbols-outlined">dashboard</span>
                    <span class="text-sm font-medium">Bảng điều khiển</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl bg-primary/10 text-primary border border-primary/20" asp-controller="Admin" asp-action="Staff">
                    <span class="material-symbols-outlined">badge</span>
                    <span class="text-sm font-medium">Nhân viên</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Admin" asp-action="Users">
                    <span class="material-symbols-outlined">group</span>
                    <span class="text-sm font-medium">Người dùng</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Admin" asp-action="Schedules">
                    <span class="material-symbols-outlined">event</span>
                    <span class="text-sm font-medium">Lịch thu gom</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Admin" asp-action="Receipts">
                    <span class="material-symbols-outlined">receipt_long</span>
                    <span class="text-sm font-medium">Ghi nhận thu gom</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Admin" asp-action="Deliveries">
                    <span class="material-symbols-outlined">local_shipping</span>
                    <span class="text-sm font-medium">Lịch giao quà</span>
                </a>
            </nav>
            <form asp-controller="Account" asp-action="Logout" method="post" class="px-4 py-4 mt-auto">
                <button type="submit" class="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/5 transition-colors border border-white/10">
                    <span class="material-symbols-outlined">logout</span>
                    <span class="text-sm font-medium">Đăng xuất</span>
                </button>
            </form>
        </aside>
        <main class="flex-1 flex flex-col h-full overflow-hidden bg-[#f8fcfa] dark:bg-background-dark relative">
            <header class="h-16 flex items-center justify-between px-8 bg-white/50 dark:bg-deep-teal/50 backdrop-blur-sm border-b border-gray-100 dark:border-white/5 z-20 sticky top-0">
                <div class="flex flex-col">
                    <h2 class="text-xl font-bold text-deep-teal dark:text-white">Thêm nhân viên</h2>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Tạo tài khoản dành cho nhân viên</p>
                </div>
            </header>
            <div class="flex-1 overflow-y-auto p-8">
                <div class="w-full max-w-2xl mx-auto flex flex-col gap-6">
                    <form asp-action="StaffCreate" method="post" class="bg-white dark:bg-[#1a2c24] rounded-2xl p-6 border border-gray-100 dark:border-white/5 shadow-sm flex flex-col gap-4">
                        <div asp-validation-summary="ModelOnly" class="rounded-lg bg-red-50 text-red-700 p-3 border border-red-200"></div>
                        <div>
                            <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Họ tên</label>
                            <input asp-for="FullName" class="mt-1 w-full rounded-lg border-gray-300 dark:border-white/10 bg-white dark:bg-white/5" />
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Tên đăng nhập</label>
                                <input asp-for="Username" class="mt-1 w-full rounded-lg border-gray-300 dark:border-white/10 bg-white dark:bg-white/5" />
                                <span asp-validation-for="Username" class="text-red-600 text-xs"></span>
                            </div>
                            <div>
                                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                                <input asp-for="Email" class="mt-1 w-full rounded-lg border-gray-300 dark:border-white/10 bg-white dark:bg-white/5" />
                                <span asp-validation-for="Email" class="text-red-600 text-xs"></span>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Điện thoại</label>
                                <input asp-for="Phone" class="mt-1 w-full rounded-lg border-gray-300 dark:border-white/10 bg-white dark:bg-white/5" />
                            </div>
                            <div>
                                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Địa chỉ</label>
                                <input asp-for="Address" class="mt-1 w-full rounded-lg border-gray-300 dark:border-white/10 bg-white dark:bg-white/5" />
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Mật khẩu</label>
                                <input asp-for="Password" type="password" class="mt-1 w-full rounded-lg border-gray-300 dark:border-white/10 bg-white dark:bg-white/5" />
                                <span asp-validation-for="Password" class="text-red-600 text-xs"></span>
                            </div>
                            <div>
                                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Xác nhận mật khẩu</label>
                                <input asp-for="ConfirmPassword" type="password" class="mt-1 w-full rounded-lg border-gray-300 dark:border-white/10 bg-white dark:bg-white/5" />
                                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-xs"></span>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 pt-2">
                            <button type="submit" class="px-5 h-11 rounded-lg bg-primary hover:bg-primary-dark text-white font-bold shadow-lg shadow-primary/30">Tạo nhân viên</button>
                            <a asp-action="Staff" class="px-5 h-11 rounded-lg bg-gray-100 dark:bg-white/10 text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-white/10 font-bold">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
