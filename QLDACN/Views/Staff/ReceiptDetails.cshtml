@model QLDACN.Models.WasteReceipt
@{
    ViewData["Title"] = "Chi tiết phiếu ghi nhận";
    Layout = null;
    var schedule = Model.Schedule!;
}
<!DOCTYPE html>
<html class="light" lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nhân viên - Chi tiết phiếu ghi nhận</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#11d473",
                        "primary-dark": "#0e9f56",
                        "deep-teal": "#0d1b14",
                        "background-light": "#f6f8f7",
                        "background-dark": "#102219",
                    },
                    fontFamily: { display: ["Inter", "sans-serif"] },
                    borderRadius: { "2xl": "1rem" }
                }
            }
        }
    </script>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-slate-100 font-display antialiased overflow-hidden">
    <div class="flex h-screen w-full">
        <aside class="hidden md:flex flex-col w-64 h-full bg-deep-teal text-white flex-shrink-0">
            <div class="p-6 flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-primary flex items-center justify-center">
                    <span class="material-symbols-outlined text-deep-teal text-xl">recycling</span>
                </div>
                <h1 class="text-xl font-bold tracking-tight">Trash to Reward</h1>
            </div>
            <nav class="flex-1 px-4 py-4 flex flex-col gap-2">
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Staff" asp-action="Index">
                    <span class="material-symbols-outlined">dashboard</span>
                    <span class="text-sm font-medium">Bảng điều khiển</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Staff" asp-action="Schedules">
                    <span class="material-symbols-outlined">event</span>
                    <span class="text-sm font-medium">Lịch thu gom</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl bg-primary/10 text-primary border border-primary/20" asp-controller="Staff" asp-action="Receipts">
                    <span class="material-symbols-outlined">receipt_long</span>
                    <span class="text-sm font-medium">Ghi nhận thu gom</span>
                </a>
                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-colors" asp-controller="Staff" asp-action="Deliveries">
                    <span class="material-symbols-outlined">local_shipping</span>
                    <span class="text-sm font-medium">Lịch giao quà</span>
                </a>
            </nav>
            <form asp-controller="Account" asp-action="Logout" method="post" class="px-4 py-4 mt-auto">
                @{
                    var staffName = User?.Identity?.Name ?? "Nhân viên";
                    var staffInitial = string.IsNullOrWhiteSpace(staffName) ? "NV" : staffName.Substring(0,1).ToUpperInvariant();
                }
                <button type="submit" class="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/5 transition-colors border border-white/10">
                    <div class="w-7 h-7 rounded-full bg-primary text-deep-teal flex items-center justify-center font-bold">@staffInitial</div>
                    <span class="text-sm font-medium flex-1 text-left">@staffName</span>
                    <span class="material-symbols-outlined">logout</span>
                </button>
            </form>
        </aside>
        <main class="flex-1 flex flex-col h-full overflow-hidden bg-[#f8fcfa] dark:bg-background-dark relative">
            <header class="h-20 flex items-center justify-between px-8 bg-gradient-to-r from-primary/10 via-emerald-200/20 to-transparent dark:from-primary/10 dark:via-white/5 dark:to-transparent border-b border-gray-100 dark:border-white/5 sticky top-0">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-primary text-white flex items-center justify-center">
                        <span class="material-symbols-outlined">receipt_long</span>
                    </div>
                    <div class="flex flex-col">
                        <h2 class="text-2xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-primary to-emerald-600">Phiếu ghi nhận #@Model.ReceiptId</h2>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Lịch @schedule.ScheduledDate.ToString("dd/MM/yyyy HH:mm") • @schedule.PickupAddress</p>
                    </div>
                </div>
                <div class="hidden md:flex items-center gap-4">
                    @{
                        var userName = schedule.User?.FullName ?? schedule.User?.Username ?? "User";
                        var initial = userName.Substring(0,1).ToUpperInvariant();
                    }
                    <div class="flex items-center gap-2">
                        <div class="w-8 h-8 rounded-full bg-primary text-white flex items-center justify-center">@initial</div>
                        <span class="text-sm font-medium text-deep-teal dark:text-white">@userName</span>
                    </div>
                    <span class="px-3 py-1 rounded-lg text-xs font-semibold bg-primary/10 text-primary border border-primary/20">Tổng điểm @Model.TotalPoints</span>
                </div>
            </header>
            <div class="flex-1 overflow-y-auto p-8">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <div class="lg:col-span-2 flex flex-col gap-6">
                        <div class="bg-white dark:bg-[#1a2c24] rounded-2xl p-6 border border-gray-100 dark:border-white/5 shadow-sm">
                            <div class="flex items-center gap-2 mb-4">
                                <span class="material-symbols-outlined text-primary">location_on</span>
                                <h3 class="text-lg font-bold">Địa điểm thu gom</h3>
                            </div>
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="text-xs text-gray-500">Địa chỉ nhận</label>
                                    <input type="text" value="@schedule.PickupAddress" class="mt-1 w-full rounded-lg border-gray-200 dark:border-white/10 bg-gray-50 dark:bg-white/5" readonly />
                                </div>
                                <div>
                                    <label class="text-xs text-gray-500">Người dùng</label>
                                    <input type="text" value="@(schedule.User?.FullName ?? schedule.User?.Username ?? "—")" class="mt-1 w-full rounded-lg border-gray-200 dark:border-white/10 bg-gray-50 dark:bg-white/5" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="bg-white dark:bg-[#1a2c24] rounded-2xl p-6 border border-gray-100 dark:border-white/5 shadow-sm">
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex items-center gap-2">
                                    <span class="material-symbols-outlined text-primary">recycling</span>
                                    <h3 class="text-lg font-bold">Chi tiết vật liệu</h3>
                                </div>
                                <div class="text-sm text-gray-600 dark:text-gray-300">Tổng điểm: <span class="font-semibold text-primary">@Model.TotalPoints</span></div>
                            </div>
                            <div class="overflow-x-auto">
                                <table class="w-full text-left border-collapse">
                                    <thead>
                                        <tr>
                                            <th class="py-3 text-xs font-medium uppercase tracking-wider">Vật liệu</th>
                                            <th class="py-3 text-xs font-medium uppercase tracking-wider">Đơn vị</th>
                                            <th class="py-3 text-xs font-medium uppercase tracking-wider">Khối lượng</th>
                                            <th class="py-3 text-xs font-medium uppercase tracking-wider">Điểm</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-sm text-gray-700 dark:text-gray-300">
                                        @foreach (var d in Model.Details)
                                        {
                                            var wtName = d.WasteType?.Name?.ToLower() ?? "";
                                            var icon = "inventory_2";
                                            if (wtName.Contains("nhựa") || wtName.Contains("pet") || wtName.Contains("pp") || wtName.Contains("hdpe") || wtName.Contains("túi")) icon = "delete";
                                            else if (wtName.Contains("giấy")) icon = "article";
                                            else if (wtName.Contains("cát-tông") || wtName.Contains("carton")) icon = "inventory_2";
                                            else if (wtName.Contains("chai") || wtName.Contains("lọ") || wtName.Contains("thủy tinh")) icon = "wine_bar";
                                            else if (wtName.Contains("lon") || wtName.Contains("nhôm") || wtName.Contains("thiếc")) icon = "lunch_dining";
                                            <tr class="border-t border-gray-50 dark:border-white/5 hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                                                <td class="py-3">
                                                    <div class="flex items-center gap-2">
                                                        <span class="material-symbols-outlined text-primary">@icon</span>
                                                        <span class="font-medium text-deep-teal dark:text-white">@d.WasteType?.Name</span>
                                                    </div>
                                                </td>
                                                <td class="py-3">@d.WasteType?.Unit</td>
                                                <td class="py-3">@d.QuantityOfWaste</td>
                                                <td class="py-3">@d.TotalWastePoints</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="relative overflow-hidden rounded-2xl p-6 bg-white dark:bg-[#1a2c24] border border-gray-100 dark:border-white/5 shadow-lg">
                        <div class="absolute -top-10 -right-10 w-40 h-40 bg-primary/10 rounded-full blur-2xl"></div>
                        <div class="absolute -bottom-14 -left-14 w-48 h-48 bg-emerald-200/20 dark:bg-white/5 rounded-full blur-3xl"></div>
                        <div class="relative z-10">
                            <div class="flex items-center gap-2 mb-4">
                                <span class="material-symbols-outlined text-primary">insights</span>
                                <h3 class="text-lg font-bold">Tổng quan phiếu</h3>
                            </div>
                            <div class="space-y-2 text-xs">
                                <div class="flex justify-between"><span class="text-gray-500">Phiếu:</span><span class="font-medium text-deep-teal dark:text-white">#@Model.ReceiptId</span></div>
                                <div class="flex justify-between"><span class="text-gray-500">Thời gian:</span><span class="font-medium text-deep-teal dark:text-white text-xs">@schedule.ScheduledDate.ToString("HH:mm, dd/MM")</span></div>
                                <div class="flex justify-between"><span class="text-gray-500">Địa điểm:</span><span class="font-medium text-deep-teal dark:text-white">@schedule.PickupAddress</span></div>
                            </div>
                            <div class="mt-5 grid grid-cols-1 sm:grid-cols-3 gap-4">
                                <div class="relative overflow-hidden rounded-xl p-4 border border-primary/20 bg-gradient-to-r from-primary/5 to-emerald-100/30 dark:from-primary/10 dark:to-white/5 shadow-sm">
                                    <p class="text-xs font-medium text-gray-600 mb-2">Tổng điểm</p>
                                    <div class="flex items-center justify-between">
                                        <span class="text-xl font-bold text-primary">@Model.TotalPoints</span>
                                        <span class="material-symbols-outlined text-primary text-base bg-white dark:bg-[#15241c] border border-primary/30 rounded-full p-1.5">stars</span>
                                    </div>
                                </div>
                                <div class="relative overflow-hidden rounded-xl p-4 border border-gray-200 dark:border-white/10 bg-gray-50 dark:bg-white/5 shadow-sm">
                                    <p class="text-xs font-medium text-gray-600 mb-2">Số loại vật liệu</p>
                                    <div class="flex items-center justify-between">
                                        <span class="text-xl font-bold text-deep-teal dark:text-white">@Model.Details.Count()</span>
                                        <span class="material-symbols-outlined text-primary text-base bg-white dark:bg-[#15241c] border border-gray-200 dark:border-white/10 rounded-full p-1.5">inventory_2</span>
                                    </div>
                                </div>
                                <div class="relative overflow-hidden rounded-xl p-4 border border-gray-200 dark:border-white/10 bg-gray-50 dark:bg-white/5 shadow-sm">
                                    <p class="text-xs font-medium text-gray-600 mb-2">Tạo lúc</p>
                                    <div class="flex items-center justify-between">
                                        <span class="text-xl font-bold text-deep-teal dark:text-white" style="font-size: 14px">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                        <span class="material-symbols-outlined text-primary text-base bg-white dark:bg-[#15241c] border border-gray-200 dark:border-white/10 rounded-full p-1.5">schedule</span>
                                    </div>
                                </div>
                            </div>
                            <a asp-action="Receipts" class="mt-6 w-full h-11 inline-flex items-center justify-center rounded-xl bg-primary hover:bg-primary-dark text-white font-semibold text-sm shadow-md">
                                Quay lại danh sách
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
